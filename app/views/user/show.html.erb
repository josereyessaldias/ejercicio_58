<div class="titulo-user">
	<div class="letra-circulo">
		<%= @user.name[0].capitalize %>
	</div>
	<h2 style="color:rgb(240,50,50);float: left">Colecciones de<br><%= @user.name %></h2>
</div>


<div class="row">
	<div class="foto-user col-2 col-md-2">
		<img src="<%= @user.photo.normal %>" class="foto_usuario"> 
	</div>
	<div class="col-3 mt-5">
		<% @cats_user_done.each do |category| %>
			<h6>Total de <%= category.sustantivo %> que <%= category.past %>: #</h6>
		<% end %>
		
	</div>

	<div class="col-7">
		<h5 style="text-align:center" class="mt-1 mb-2">Colecciones</h5>
		<div class="row">
			<% @user_collections.each do |coll| %>

				<div class="col-4 recuadro-coleccion ml-2">
					<img src="<%= coll.collection.photo.normal %>" class="foto-coleccion"><br>
					<%= link_to coll.collection.name, collection_path(coll), :class => "coleccion-nombre" %>
				</div>

			<% end %>
		</div>
	</div>
</div>

<br>



<% if user_signed_in? && @following %>
	<%=link_to "Dejar de seguir a #{@user.name}", contact_path(:id => @user.id), method: :delete, :class => 'btn btn-info' %>
<% elsif user_signed_in? && @user.id != current_user.id %>
	<%=link_to "Seguir a #{@user.name}", contacts_path(:id => @user.id), method: :post, :class => 'btn btn-info', :style => 'color:white;'  %>
<% end %>
<br>

<div class="row">
	<div class="col-12 col-md-5 pl-0 pr-2" >
		<%if @trekking != [] %>
			<h5 style="text-align:center;">Trekkings y lugares visitados</h5>
		 	<div id="map" style="height: 240px;"></div>
		<% end %>
	</div>


	<div class="col-12 col-md-7">
		<h5 style="text-align:center">Actividades por a√±o</h5>
		<%= javascript_include_tag "https://www.google.com/jsapi", "chartkick" %>
		<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
		<% my_chart = UserActivity.where(user_id: current_user.id).group_by_year(:start).count %>

		<div style="max-height: 300px;"><%= line_chart my_chart, height: "240px" %></div>
	</div>
</div>
<br>
<hr>

<div class="row">
	<div class="col-12 col-md-6">
		<h3><%= @titulo_done %></h3>

		<% @cats_user_done.each do |category| %>
			<h5><%= category.sustantivo %> que <%= category.past %></h5>
			<div style="margin: 0 0 10px">
				<% @user_act_done.each do |suceso| %>
					<% if suceso.activity.category_id == category.id %>
						
						<div class="row">
							<div style="float: left; margin-left: 20px;">
								<img src="<%= suceso.activity.photo.thumb %>" >
							</div>
							<div style="float: left; margin: 0 0 5px 5px;">
								<%= link_to suceso.activity.name, activity_path(suceso.activity) %><br>
								<%= category.participio %> el <%= suceso.start.strftime("%F") %>
								<% if can?(:destroy, suceso) %>
									<%= link_to 'Editar', edit_user_activity_path(suceso) %>
									<%= link_to 'Borrar', user_activity_path(suceso), method: :delete %>
								<% end %>
							</div>
						</div>

					<% end %>
				<% end %>
			</div>
		<% end %>
		
	</div>

	<div class="col-12 col-md-6">
		<% if @titulo_wish %>
			<h3><%= @titulo_wish %><%= link_to "Ver en Calendario", user_calendar_path(@user.id), :class=> 'btn btn-sm float-right', :style=> 'width:180px;background-color:rgb(50,180,50);color:white' %></h3>			
		<% end %>

		<% @cats_user_wish.each do |category| %>
			<h5><%= category.sustantivo %> que <%= category.futuro %></h5>
			<div style="margin: 0 0 10px">
				<% @user_act_wish.each do |suceso| %>
					<% if suceso.activity.category_id == category.id %>
						
						<div class="row">
							<div style="float: left; margin-left: 20px;">
								<img src="<%= suceso.activity.photo.thumb %>" >
							</div>
							<div style="float: left; margin: 0 0 5px 5px;">
								<%= link_to suceso.activity.name, activity_path(suceso.activity) %><br>
								planificada para el <%= suceso.start.strftime("%F") %>
								<% if can?(:destroy, suceso) %>
									<%= link_to 'Editar', edit_user_activity_path(suceso) %>
									<%= link_to 'Borrar', user_activity_path(suceso), method: :delete %>
								<% end %>
							</div>
						</div>

					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>
</div>


<br><br>


